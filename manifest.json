{
  "manifest_version": 3,
  "name": "Hello World Extension",
  "version": "1.0",
  "description": "A simple hello world extension",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.firebaseapp.com https://api.anthropic.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://extensionpay.com https://*.extensionpay.com"
  },
  "content_scripts": [
    {
      "matches": ["https://extensionpay.com/*"],
      "js": ["ExtPay.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://*.firebaseapp.com/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://securetoken.googleapis.com/*",
    "https://*.extensionpay.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  }
}
